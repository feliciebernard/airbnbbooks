    <div class="book-list">
      <!-- If Else Rails starts here -->
      <% @own_books.each do |own_book|%>
   <div class="nine columns" >
      <div class="card card-list">
        <% if own_book.book.image_link != nil %>
         <%= image_tag "book1.jpg", class:"book-img-list"%>
        <%else%>
        <%= image_tag "book1.jpg", class:"book-img-list"%>
        <%end%>
        <h6><%=own_book.book.title %></h6>
        <p><%= own_book.book.authors%></p>
        <p><%= own_book.book.isbn%></p>
        <p><%= own_book.book.description%></p>
        <%= link_to "Fiche du livre", own_book_path(own_book.id), class:"button"%>
        <%= mail_to own_book.user.email, "Emprunter" ,class:"button button-success"%>
        <% if own_book.available %>
          <%= link_to "Rendre indisponible", switch_availability_path(own_book.id), class: "button button-danger" %>
        <% else %>
          <%= link_to "Rendre disponible", switch_availability_path(own_book.id), class: "button button-danger" %>
        <% end %>

      </div>
    </div>
  
  <%end%>
  <!-- If Else ends here -->
</div>
</div> <!-- Row end-->
</div> <!-- Container end-->
