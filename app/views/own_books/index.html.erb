<p id="notice"><%= notice %></p>

<h1>Own Books</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>Appreciation</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @own_books.each do |own_book| %>
      <tr>
        <td><%= own_book.review %></td>
        <td><%= own_book.appreciation %></td>
        <td><%= link_to 'Show', own_book %></td>
        <td><%= link_to 'Edit', edit_own_book_path(own_book) %></td>
        <td><%= link_to 'Destroy', own_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Own Book', new_own_book_path %>
