<p id="notice"><%= notice %></p>
<br>
<div class="container">
  <div class="row">
    <div class="six columns">
      <%= link_to 'Ajouter un livre à ma bibliothèque', new_book_path, class:"button button-success" %>
    </div>
    <div class="three columns">
      <%= form_tag(search_own_book_path, :method => "get") do %>  
      <div class="input-group">  
        <%= search_field_tag :search, params[:search], placeholder: "Chercher un titre, un profil", class: "u-full-width" %>
      </div>
    </div>
    <div class="three columns">
      <div class="input-group-btn">  
      <%= button_tag "rechercher", :class => 'button button-primary',:name => nil%>  
    </div>  
    </div>  
    <% end %>
  </div>
</div>

<br>
<div class="book-container">
  <h2 class="text-upp u-text-center">Tous les livres</h2>
  <hr>
  <div class="row">

    <%= render "indexownbook"%>

  </div>
</div>
</div>
