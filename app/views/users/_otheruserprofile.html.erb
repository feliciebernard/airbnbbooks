  <div class="book-container">
  <div class="row">
    <div class="three columns" >
      <div class="card user-profile">
      <%if @user.avatar.attached?%>
      <% image_tag @user.avatar, class:"avatar"%>
      <%else%>
        <div class="avatar"></div>
        <%end%>
        <div class="buttons">
        <%= mail_to @user.email, "Contacter" ,class:"first-button button button-success u-full-width"%></div>
        <hr class="hr-index">
        <h6 class="username text-dark"><%= @user.name%></h6>
        <p class="user-description text-dark"><%= @user.biography %></p>
      <hr class="hr-index">
        <%if @user.private_address == nil %>

        <%else%>
        <p class="text-upp u-text-center text-dark"><%= @user.private_address.street_name%></p>
<p class="text-upp u-text-center text-dark text-bold"><%= link_to @user.private_address.city.name ,"https://www.google.fr/maps/place/#{@user.private_address.street_name + "+" +@user.private_address.city.name}", class:"city-link"%></p>        <%end%>
      <hr>
      </div>
      </div>