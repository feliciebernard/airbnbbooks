<div class="book-container">
  <div class="row">
    <div class="three columns" >
      <div class="card user-profile">
      <%if @user.avatar.attached?%>
      <%= image_tag @user.avatar, class:"avatar"%>
      <%else%>
        <div class="avatar"></div>
        <%end%>
        <div class="buttons">
          <%= form_tag user_avatars_path(@user), multipart: true do %>
          <%= file_field_tag :avatar, class:"first-button u-full-width button" %>
          <%= submit_tag "confirmer", class:"first-button button-danger u-full-width "%>
          <%end%>
          <%=link_to "Ajouter un livre", new_book_path, class:"button button-primary u-full-width"%>
          <%=link_to "Editer le profil", edit_user_path, class:"button button-success u-full-width"%></div>


        <h6 class="username"><%=@user.name%></h6>
        <p class="user-description"><%= @user.biography %></p>

        <%if @user.private_address == nil %>

        <%else%>
        <%= @user.private_address.street_name%>
        <%= @user.private_address.city.name%>
        <%end%>

      </div>
    </div>
    </div>

    
