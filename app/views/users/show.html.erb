<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Biography:</strong>
  <%= @user.biography %>
</p>

<div class="my_books">
  <table>
    <thead>
      <tr>
        <th>Titre</th>
        <th>Avis du livre</th>
        <th>Note</th>
        <th>Nom du prêteur</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user_own_books.each do |own_book| %>
        <tr>
          <td><%= own_book.book.title %></td>
          <td><%= own_book.review %></td>
          <td><%= own_book.appreciation %></td>
          <td><%= own_book.user.name %></td>

          <td><%= link_to 'Voir la fiche du livre', own_book %></td>
          <td><%= link_to 'Editer mon livre', edit_own_book_path(own_book) %></td>
          <td><%= link_to 'Le supprimer de ma bibliothèque', own_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
