<h2 class="u-text-center text-info text-upp">Modifier un bouquin</h2>

<div class="row">

  <div class="three column"></div>
 
  <div class="six columns">
   <hr>
    <div class="field">
      <%= form.label :isbn, class:"text-dark text-upp" %>
      <%= form.text_field :isbn, class:"u-full-width" %>
    </div>

    <div class="field">
      <%= form.label "titre", class:"text-dark text-upp" %>
      <%= form.text_field :title, autofocus: true, class: "u-full-width placeholder"%>
    </div>

    <div class="field">
      <%= form.label "auteur", class:"text-dark text-upp" %>
      <%= form.text_field :authors, autofocus: true, class: "u-full-width placeholder"%>
    </div>

    <div class="field">
      <%= form.label "editeur", class:"text-dark text-upp" %>
      <%= form.text_field :publisher, autofocus: true, class: "u-full-width placeholder"%>
    </div>

    <div class="field">
      <%= form.label "date de publication", class:"text-dark text-upp" %>
      <%= form.number_field :published_date, autofocus: true, class: "u-full-width placeholder"%>
    </div>

    <div class="field">
      <%= form.label "langue", class:"text-dark text-upp" %>
      <%= form.text_field :language, autofocus: true, class: "u-full-width placeholder"%>
    </div>


    <div class="field">
      <%= form.label "description",  class:"text-dark text-upp"%>
      <%= form.text_area :description, autofocus: true, class: "u-full-width placeholder", rows:"10"%>
    </div>

    <div class="field">
      <%= form.label "lien vers l'image de couverture", class:"text-dark text-upp" %>
      <%= form.text_field :image_link, placeholder: "Renseignez un URL", class:"u-full-width text-upp" %>
      <%= form_tag book.image_link, multipart: true do %>
      <%= file_field_tag "Choisir une image", class:"button" %>
      <%= submit_tag "confirmer", class:"button-danger" %>
      <%end%>
    </div>

    <div class="actions">
      <%= form.submit 'Modifier la fiche du livre',class:"u-full-width button-primary" %>
    </div>
    <%= link_to 'Afficher le livre', @own_book, class:"button button-success" %>
<%= link_to 'Retour vers la bibliothÃ¨que', own_books_path, class:"button u-pull-right" %>
  </div>
</div>